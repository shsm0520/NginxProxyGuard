# Nginx Proxy Guard - Environment Configuration
# Copy this file to .env and modify as needed:
#   cp env.example .env

# ============================================
# Required Settings
# ============================================

# Database password (CHANGE THIS!)
DB_PASSWORD=change_me_to_secure_password

# JWT Secret - generate with: openssl rand -hex 32
JWT_SECRET=change_me_generate_with_openssl_rand_hex_32

# ============================================
# Optional Settings
# ============================================

# Timezone (default: UTC)
TZ=Asia/Seoul

# Database settings (defaults are fine for most users)
DB_USER=postgres
DB_NAME=nginx_guard

# Port settings (change if ports are already in use)
# ADMIN_PORT=81      # Admin panel HTTPS port
# HTTP_PORT=80       # Proxy HTTP port
# HTTPS_PORT=443     # Proxy HTTPS port

# ============================================
# SSL Certificate (Let's Encrypt)
# ============================================

# Email for Let's Encrypt notifications
ACME_EMAIL=admin@yourdomain.com

# Use staging server for testing (true/false)
ACME_STAGING=false

# ============================================
# GeoIP (Optional but recommended)
# ============================================
# Sign up at: https://www.maxmind.com/en/geolite2/signup
# Enables: Country-based blocking, Geographic stats

MAXMIND_ACCOUNT_ID=
MAXMIND_LICENSE_KEY=
